# NOTE: Currently, only MySQL is supported!

require 'optparse'

require 'rubygems'
require 'highline/import'

$: << File.join(File.dirname(__FILE__), '..', 'lib')

require 'flattendb/mysql'

USAGE = "Usage: #{$0} [-h|--help] [options] <infile> <outfile> <configfile>"

options = {}

OptionParser.new { |opts|
  opts.banner = USAGE
}.parse!

abort USAGE unless ARGV.size == 3

infile, outfile, configfile = ARGV

abort "Input file not found: #{infile}" unless File.readable?(infile)
abort "Input file has to be in XML format ('mysqldump --xml ...')" unless IO.read(infile, 6) == '<?xml '

FlattenDB::MySQL.new(infile, outfile, configfile).flatten!.to_xml
